<body>
	<div id="map" style="height: 400px; width: 100%"></div>
	<script>
		var labels = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
		var labelIndex = 0;
  		function initMap() {
			var map = new google.maps.Map(document.getElementById('map'), {
				zoom: {% if page.zoom %}{{ page.zoom }}{% else %}5{% endif %},
			});
  
		geocoder = new google.maps.Geocoder();
        
		function getCountry(country) {
			geocoder.geocode( { 'address': country }, function(results, status) {
				if (status == google.maps.GeocoderStatus.OK) {
				
					<!-- Centre la carte sur le pays -->
					map.setCenter(results[0].geometry.location);
				
					<!-- Si jamais ça plante... -->
				} else {
					alert("Geocode was not successful for the following reason: " + status);
				}
			});
			}
  
		getCountry( '{{page.country}}' );
		
		function getCity(city) {
			geocoder.geocode( { 'address': city }, function(results, status) {
				if (status == google.maps.GeocoderStatus.OK) {
					<!-- Crée le marqueur -->
					var marker = new google.maps.Marker({
						position: results[0].geometry.location,
						label: labels[labelIndex++ % labels.length],
						map: map
					});
					
					<!-- Si jamais ça plante... -->
				} else {
					alert("Geocode was not successful for the following reason: " + status);
				}
			});
		}
		getCity(' {{page.capitale}} ');
		{% if city %}
		getCity(' {{city.name}} ');
		{% endif %}
	
	}
	
	</script>
	<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCAyZPF-oG9ODz-KNImGAg4po4yq7rGn2s&callback=initMap"></script>
</body>
