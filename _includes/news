{% comment %}
*
*   Possible parameter for this loop:
*
*    › entries
*    › offset
*    › category
*    › tag
*
*   Example for Category: {% include list-posts entries='3' offset='1' category='design' %}
*
*   Example for Tag: {% include list-posts entries='5' tag='terminal' %}
*
*
*   This loop works like this:
*
*   1. First we check if there was given a category for filtering › if include.categories == NULL
*   2. If no category is given for filtering do a general loop.
*   3. If a category/tag was given, assign category/tag to the variable category/tag › assign category = include.categories
*
{% endcomment %}

{% assign post = site.data.news %}

<p><strong>Les dernières news</strong></p>
<ul class="side-nav">

		{% for news in site.data.news %}
			<li>{{ post[news].date }} - {{ post[news].title }}<br/>
				{% if post[news].teaser %}{{ post[news].teaser }} {% endif %}{% if post[news].lien %}<a href="{{ site.url }}{{ site.baseurl }}{{ post[news].url }}{{ post[news].lien }}"><strong>Plus d'infos</strong></a>{% endif %}
			</li>
		{% endfor %}
			{% if post[news].lien %}<li class="text-right"><a href="{{ site.url }}{{ site.baseurl }}/#/"><strong>Plus de news</strong></a></li>{% endif %}

</ul>